{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'application Todo avec architecture professionnelle",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "init": "./scripts/init-prisma.sh"
  },
  "keywords": ["todo", "express", "api", "mongodb", "nodejs", "rest"],
  "author": "Todo App Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "@prisma/client": "^5.4.2",
    "@sonatel-os/juf-xpress-logger": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "typescript": "^5.2.2",
    "@types/node": "^20.6.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "ts-node": "^10.9.1",
    "ts-jest": "^29.1.1",
    "mongodb-memory-server": "^8.15.1",
    "tsconfig-paths": "^4.2.0",
    "prisma": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
